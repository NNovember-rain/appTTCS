<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/layoutVerifyPhone"
    android:padding="20dp"
    android:background="@drawable/custom_backgroup"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPhoneNummber"
        style="@style/AppTheme.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/enter_phone_nummber" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOTP1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOTP2"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOTP3"

            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOTP4"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOTP5"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOTP6"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_weight="1" />


    </LinearLayout>

        <TextView
            android:id="@+id/txtResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend?"
            android:textColor="@color/colorBlue"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textStyle="normal" />


</LinearLayout>